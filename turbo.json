{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "dist/**",
        ".output/**",
        ".vitepress/dist/**",
        ".next/**",
        "!.next/cache/**",
        ".netlify/build"
      ],
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test:unit": {
      "dependsOn": ["^build"]
    },
    "test:e2e": {},
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
